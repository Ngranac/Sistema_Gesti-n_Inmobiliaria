@page
@model SistemaGestiónConstructora.Pages.RegistrarseModel
@{

    Layout = "Shared/_Login.cshtml";
}
<!--Inicio de sesión-->
<div class="carousel">
    <div class="carousel-item active">
        <img src="~/img/ed1C.jpg" class="d-block jumbotron-image" alt="ALESTE">
    </div>
    <div class="carousel-item">
        <img src="~/img/ed1C.jpg" class="d-block jumbotron-image" alt="AVENIDA">
    </div>
    <div class="carousel-item">
        <img src="~/img/ed1C.jpg" class="d-block jumbotron-image" alt="TorreU">
    </div>
    <div class="carousel-item">
        <img src="~/img/ed1C.jpg" class="d-block jumbotron-image" alt="TorreU_2">
    </div>
</div>
<div class="contenedor-login">
    <div class="contenedor-login">
        <div class="login-box">
            <div class="card card-outline card-primary">
                <div class="text-center">
                    <div>
                        <img class="img-login" src="/img/LG.png" alt="Logo Compañía"
                             width="250" />
                    </div>
                    <p class="titulo-sistema"><b> Sistema de Control<br />Inmobiliario</b></p>

                </div>
                <div class="card-body">
                    <p class="login-box-msg text-center">Registrarse</p>
                    <form method="post">
                        <div class="input-group form-outline mb-3" data>
                            <input type="number" name="cedula" class="form-control" required />
                            <label class="form-label" for="cedula">Identificación</label>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="fa-solid fa-id-card"></i>
                                </div>
                            </div>
                        </div>
                        <div class="input-group form-outline mb-3" data>
                            <input type="email" name="Correo" class="form-control" required />
                            <label class="form-label" for="correo">Correo electrónico</label>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <span class="text-danger"></span>
                        <div class="input-group  form-outline mb-3">
                            <input type="password" name="Contrasenna" class="form-control" required />
                            <label class="form-label" for="contrasena">Contraseña</label>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>

                        <span class="text-danger"></span>
                        <div class="row justify-content-md-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger "></div>
                        </div>
                        <div class="row">
                            <div class="col-12 ">
                                <button type="submit" id="btnLogin" class="btn btn-primary btn-block">Aceptar</button>
                            </div>
                        </div>
                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.querySelectorAll('.form-outline').forEach((formOutline) => {
        new mdb.Input(formOutline).init();
    });

</script>
<script>
    let currentSlide = 0;
    const slides = document.querySelectorAll('.carousel-item');
    const interval = 10000;

    function showSlide(slideIndex) {
        slides[currentSlide].classList.remove('active');
        currentSlide = slideIndex;
        slides[currentSlide].classList.add('active');
    }

    function nextSlide() {
        const nextSlideIndex = (currentSlide + 1) % slides.length;
        showSlide(nextSlideIndex);
    }

    function startCarousel() {
        showSlide(0);
        setInterval(nextSlide, interval);
    }

    startCarousel();


</script>